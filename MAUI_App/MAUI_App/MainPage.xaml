<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mauiLibrary="clr-namespace:MAUI_Library;assembly=MAUI_Library"
             x:Class="MAUI_App.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="5"
            VerticalOptions="Center">

            <Button Text="load url" Clicked="Load_Url"/>
            <mauiLibrary:DWebViewControl x:Name="dwebview" Url="https://www.baidu.com" BackgroundColor="Yellow"></mauiLibrary:DWebViewControl>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
